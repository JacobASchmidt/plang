module files

type Error union 
    Invalid    ()
	Permission ()
	Exist      ()
	NotExist   ()

type Mode union 
    Dir                 = 1 << (32 - 1 - iota) # d: is a directory
	Append                                     # a: append-only
	Exclusive                                  # l: exclusive use
	Temporary                                  # T: temporary file; Plan 9 only
	Symlink                                    # L: symbolic link
	Device                                     # D: device file
	NamedPipe                                  # p: named pipe (FIFO)
	Socket                                     # S: Unix domain socket
	Setuid                                     # u: setuid
	Setgid                                     # g: setgid
	CharDevice                                 # c: Unix character device, when Device is set
	Sticky                                     # t: sticky
	Irregular                                  # ?: non-regular file; nothing else is known about this file

	// Mask for the type bits. For regular files, none will be set.
	Type = Dir | Symlink | NamedPipe | Socket | Device | CharDevice | Irregular


type File struct 
    #platform specific

